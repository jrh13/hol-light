     REWRITE_TAC[SERIES_CX_LIFT] THEN
     SUBGOAL_THEN `lift o (\k. -- &1 pow k / &(FACT (2 * k + 1)) * x pow (2 * k + 1)) = \k. lift (-- &1 pow k / &(FACT (2 * k + 1)) * x pow (2 * k + 1))` (fun th -> SIMP_TAC[th; FROM_0]) THEN
    REWRITE_TAC[FUN_EQ_THM; o_THM]);;

